<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8E9A1">

        <ImageView
            android:id="@+id/photographerImage"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/photographerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elegant Studio"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/photographerCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Kolkata"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/photographerRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ 4.8 (120 reviews)"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/photographerPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹25,000 per day"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

