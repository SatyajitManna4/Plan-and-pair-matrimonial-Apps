<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_arrow"
                android:contentDescription="Back"
                app:tint="@android:color/black" />
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5" />

            <ImageButton
                android:id="@+id/likeButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/ic_heart"
                android:contentDescription="wishlist"
                app:tint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Photographer Image -->
            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_placeholder"
                android:contentDescription="Photographer Image"
                android:layout_marginBottom="16dp" />

            <!-- Name -->
            <TextView
                android:id="@+id/detailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📸 Sourav Sen Galleries"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <!-- City -->
            <TextView
                android:id="@+id/detailCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Birati, Kolkata"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <!-- Rating and Reviews -->
            <TextView
                android:id="@+id/detailRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ 3.0 (25 reviews)"
                android:textSize="16sp"
                android:textColor="#FF9800"
                android:layout_marginBottom="8dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/detailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹35,000 per day (₹60,000 with video)"
                android:textSize="16sp"
                android:textColor="#00897B"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Services -->
            <TextView
                android:id="@+id/detailServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Services: Candid, Traditional, Cinematic Photography"
                android:textSize="15sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Delivery Time -->
            <TextView
                android:id="@+id/detailDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Time: Proofs in 3 weeks; Final album in 6 weeks"
                android:textSize="15sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Advance Payment -->
            <TextView
                android:id="@+id/detailAdvance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advance Payment: 20%"
                android:textSize="15sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Travel Policy -->
            <TextView
                android:id="@+id/detailTravel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Policy: Outstation travel and stay charges borne by client"
                android:textSize="15sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Experience -->
            <TextView
                android:id="@+id/detailExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Experience: 8+ years"
                android:textSize="15sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Client Feedback -->
            <TextView
                android:id="@+id/detailFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Client Feedback: Clients commend the team for their professionalism, punctuality, and ability to make subjects feel comfortable."
                android:textSize="15sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Gallery Preview Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallery Preview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Horizontal Gallery Preview -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/galleryRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:scrollbars="horizontal"
                android:orientation="horizontal" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Book Now Button -->
                <Button
                    android:id="@+id/bookNowButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book Now"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#2196F3"
                    android:padding="14dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/callButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Call"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#4CAF50"
                        android:padding="10dp" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/whatsappButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="WhatsApp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#25D366"
                        android:padding="10dp" />

                    <View
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/shareButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Share"
                        android:textColor="@android:color/white"
                        android:backgroundTint="#F06292"
                        android:padding="10dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
