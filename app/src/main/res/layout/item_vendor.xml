<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewVendor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8E9A1">

        <ImageView
            android:id="@+id/imageViewVendor"
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/textViewVendorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imageViewVendor"
                android:layout_marginStart="12dp"
                android:text="Vendor Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewVendorLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewVendorName"
                android:layout_toEndOf="@id/imageViewVendor"
                android:layout_marginStart="12dp"
                android:text="Location"
                android:textSize="14sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/textViewVendorRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewVendorLocation"
                android:layout_toEndOf="@id/imageViewVendor"
                android:layout_marginStart="12dp"
                android:text="★ 4.5 (120)"
                android:textSize="14sp"
                android:textColor="#FFB300" />

            <TextView
                android:id="@+id/textViewVendorPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="₹ 250"
                android:textSize="14sp"
                android:textColor="#333"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/imageButtonWishlist"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="25dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Remove from wishlist"
                    android:src="@drawable/ic_heart" />

                <TextView
                    android:id="@+id/textViewVendorType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor Type"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@id/imageButtonWishlist"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="20dp"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
